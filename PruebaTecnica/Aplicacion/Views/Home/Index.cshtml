@{
    ViewData["Title"] = "Home";
}

@using Servicio.DTOs
@model ICollection<LibroDTOs>;

<div class="row">
    <center>
        <h1> Libros </h1>
    </center>

</div>
<div class="row">
    <center>
        <div class="container">
            <div class="row">
                <div class="col"> <a type="button" class="btn btn-outline-dark" asp-area="" asp-controller="Libros" asp-action="Lista">Agregar Nuevo Libro</a></div>
                <div class="col"> <a type="button" class="btn btn-outline-dark" asp-area="" asp-controller="Autor" asp-action="Lista">Agregar Nuevo Autor</a></div>

            </div>
        </div>
    </center>
   
</div>



<div class="row" style="padding:10px">
    <table class="table table-info table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>descripción</th>
                <th>Nombre autor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model)
            {
                <tr>
                    <td>@Item.Id</td>
                    <td>@Item.Titulo</td>
                    <td>@Item.Descripcion</td>
                    <td>@Item.NombreAutor</td>
                </tr>
            }
        </tbody>
    </table>
</div>