@using Servicio.DTOs

@model AutorDTOs;
<div class="row">
    <div class="col-sm-8 ">
        <h1>Agregar Autor</h1>
        <form asp-controller="Autor" asp-action="Nuevo" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" onkeypress="return soloLetras(event)" class="form-control" placeholder="Nombre del Autor">
            </div>
            <div class="mb-3">
                <label class="form-label">Descripción </label>
                <textarea asp-for="Descripcion" type="text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Modificar</button>
                <a class="btn btn-outline-warning" asp-controller="Autor" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {


    <script>

        function soloLetras(event) {
            var charCode = event.which || event.keyCode;
            var char = String.fromCharCode(charCode);
            var regex = /^[A-Za-zÁÉÍÓÚáéíóúñÑ ]+$/;
            return regex.test(char);
        }
    </script>

}
