
@using Servicio.DTOs
@model LibroDTOs;

@section Scripts {


    <script>

        function soloLetras(event) {
            var charCode = event.which || event.keyCode;
            var char = String.fromCharCode(charCode);
            var regex = /^[A-Za-zÁÉÍÓÚáéíóúñÑ ]+$/;
            return regex.test(char);
        }
    </script>

}

<diw class="row">
    <div class="col-sm-8 ">
        <h1>Modificar Libro</h1>
        <form asp-controller="Libros" asp-action="EditarLibro" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Libro</label>
                <input asp-for="Titulo" type="text" onkeypress="return soloLetras(event)" class="form-control" placeholder="Titulo del libro" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripción </label>
                <textarea asp-for="Descripcion" type="text" onkeypress="return soloLetras(event)" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="autor">Selecciona un Autor:</label>
                <select asp-for="AutorId" class="form-control" required>
                    <option value="">Seleccione un autor</option>
                    @foreach (var item in ViewBag.Autores)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Agregar</button>
                <a class="btn btn-outline-warning" asp-controller="Autor" asp-action="Lista">Volver</a>
            </div>
        </form>
    </div>
</diw>
